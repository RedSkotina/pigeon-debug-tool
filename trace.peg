func toIfaceSlice(v interface{}) []interface{} {
	if v == nil {
		return nil
	}
	return v.([]interface{})
}
func IfaceSliceToString(v []interface{}) string {
    if v == nil {
        return ""
    }
    buffer := bytes.Buffer{}
    for i := range v {
        buffer.WriteString(string(toIfaceSlice(v[i])[1].([]uint8)))
    }
    return buffer.String()
}


type tposition struct {
    line,col,pos int 
}
type tcursor struct {
    codepoint int 
}

type tparse struct {
    pos tposition
    text string
    cursor int
    dir string
}

type tmatch struct {
    pos tposition
    text string
    cursor int
}

type trestore struct {
    pos tposition
